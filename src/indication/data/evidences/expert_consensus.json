            "consensus_id": "consensus_002",
            "title": "特发性肺纤维化诊疗专家共识",
            "organization": "中国胸部疾病研究协作组",
            "version": "2024",
            "publication_date": "2024-12-01",
            "last_updated": "2025-02-18T15:13:01+08:00",
            "sections": [
                {
                    "section_id": "sec_002",
                    "title": "合并症处理原则",
                    "content": "特发性肺纤维化合并肺动脉高压时，在权衡获益风险后可考虑使用西地那非等PAH靶向药物",
                    "consensus_level": "强烈建议",
                    "evidence_quality": "中等",
                    "key_recommendations": [
                        "应根据血流动力学指标选择合适患者",
                        "建议从小剂量开始，逐步调整",
                        "定期评估获益风险比",
                        "密切监测不良反应"
                    ],
                    "clinical_considerations": [
                        {
                            "aspect": "获益",
                            "details": "可改善运动耐量和生活质量"
                        },
                        {
                            "aspect": "风险",
                            "details": "需关注对原发病进展的影响"
                        },
                        {
                            "aspect": "监测",
                            "details": "建议每1-3个月随访一次"
                        }
                    ]
                }
            ],
            "references": [
                "中华医学杂志, 2024;104:1-8",
                "中国实用内科杂志, 2024;44:123-130"
            ],
            "tags": [
                "IPF",
                "PAH",
                "西地那非",
                "合并症管理"
            ]
        },
        {
            "consensus_id": "consensus_003",
            "title": "焦虑障碍药物治疗专家共识",
            "organization": "中国精神障碍防治联盟",
            "version": "2024",
            "publication_date": "2024-01-15",
            "last_updated": "2025-02-18T15:38:10+08:00",
            "sections": [
                {
                    "section_id": "sec_003",
                    "title": "轻中度焦虑症的药物治疗策略",
                    "content": "轻中度焦虑症应优先考虑SSRIs、SNRIs等抗抑郁药物，抗精神病药物仅用于特殊情况",
                    "consensus_level": "强烈推荐",
                    "evidence_quality": "高",
                    "key_recommendations": [
                        "优先选用SSRIs类药物",
                        "SNRIs作为替代选择",
                        "谨慎使用苯二氮䓬类药物",
                        "避免常规使用抗精神病药物"
                    ],
                    "treatment_algorithm": {
                        "first_line": {
                            "drug_class": "SSRIs",
                            "duration": "8-12周",
                            "evaluation": "4-6周评估疗效"
                        },
                        "second_line": {
                            "drug_class": "SNRIs",
                            "conditions": "SSRIs无效或不耐受"
                        },
                        "adjunctive": {
                            "drug_class": "苯二氮䓬类",
                            "duration": "不超过4周",
                            "monitoring": "密切关注依赖风险"
                        }
                    },
                    "special_considerations": [
                        {
                            "population": "老年人",
                            "recommendations": "从小剂量开始，缓慢调整"
                        },
                        {
                            "population": "合并失眠者",
                            "recommendations": "可短期使用镇静催眠药"
                        }
                    ],
                    "inappropriate_practices": [
                        {
                            "practice": "使用抗精神病药物",
                            "reason": "不良反应风险高，获益有限",
                            "exceptions": "严重难治性病例，需专科医师评估"
                        },
                        {
                            "practice": "长期使用苯二氮䓬类",
                            "reason": "存在依赖风险",
                            "alternatives": "考虑认知行为治疗等非药物治疗"
                        }
                    ]
                }
            ],
            "references": [
                "中华精神科杂志, 2024;57:1-10",
                "临床精神医学杂志, 2024;33:45-52"
            ],
            "tags": [
