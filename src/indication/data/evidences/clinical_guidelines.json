            "sections": [
                {
                    "title": "急性链球菌性咽炎的治疗",
                    "content": "青霉素类抗生素是治疗链球菌性咽炎的首选药物。阿莫西林具有良好的抗菌活性，对链球菌敏感性高，且具有良好的安全性和依从性。",
                    "recommendations": [
                        {
                            "id": "rec_001",
                            "disease": "急性链球菌性咽炎",
                            "drug_class": "青霉素类抗生素",
                            "specific_drugs": [
                                {
                                    "name": "阿莫西林",
                                    "recommendation_level": "A",
                                    "evidence_level": "I",
                                    "dosage": {
                                        "adult": {
                                            "dose": "0.5g",
                                            "frequency": "tid",
                                            "duration": "7-10天"
                                        },
                                        "child": {
                                            "dose": "25-50mg/kg/d",
                                            "frequency": "tid",
                                            "duration": "7-10天"
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "references": [
                {
                    "id": "ref_001",
                    "title": "Systematic Review of Antibiotics for Group A Streptococcal Pharyngitis",
                    "journal": "Clinical Infectious Diseases",
                    "year": 2022,
                    "doi": "10.1093/cid/example"
                }
            ]
